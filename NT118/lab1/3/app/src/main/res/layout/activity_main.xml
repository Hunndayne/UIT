<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_basex4"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="75dp"
        android:id="@+id/tv_user_name"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sign_in"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/username"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in"
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_marginLeft="@dimen/margin_basex2"
    />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="name@gmail.com"
        app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignTop="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name"
        android:layout_marginLeft="@dimen/margin_basex4"
        android:layout_marginRight="@dimen/margin_basex4"
        />


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/password"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_marginLeft="@dimen/margin_basex2"


         />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_username"
        app:layout_constraintLeft_toRightOf="@+id/tv_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        android:layout_marginLeft="@dimen/margin_basex4"
        android:layout_marginRight="@dimen/margin_basex4"
        />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignParentRight="true"
        android:text="@string/sign_in"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:layout_marginTop="@dimen/margin_base"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_base"
        android:text="@string/signup"
        android:id="@+id/btn_sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft = "@dimen/margin_basex4"
        android:layout_marginRight = "@dimen/margin_basex4"
        android:layout_marginBottom="@dimen/margin_basex4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_base"
        android:text="@string/Signinfb"
        android:id="@+id/btn_facebook"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
        android:layout_marginLeft = "@dimen/margin_basex4"
        android:layout_marginRight = "@dimen/margin_basex4"
        android:layout_marginBottom="@dimen/margin_base"
        />
</androidx.constraintlayout.widget.ConstraintLayout>